<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_image">

    <Button
        android:id="@+id/btnElectrician"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Electrician"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:drawableTop="@drawable/ic_electrician"
        android:drawablePadding="8dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPlumber"
        app:layout_constraintBottom_toTopOf="@+id/btnPainter"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btnPlumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Plumber"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:drawableTop="@drawable/ic_plumber"
        android:drawablePadding="8dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnElectrician"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnMason"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btnPainter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Painter"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:drawableTop="@drawable/ic_painter"
        android:drawablePadding="8dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/btnElectrician"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnMason"
        app:layout_constraintBottom_toTopOf="@+id/btnMaid"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btnMason"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Mason"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:drawableTop="@drawable/ic_mason"
        android:drawablePadding="8dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/btnPlumber"
        app:layout_constraintStart_toEndOf="@id/btnPainter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnInternetProvider"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btnMaid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Maid"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:drawableTop="@drawable/ic_maid"
        android:drawablePadding="8dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/btnPainter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnInternetProvider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btnInternetProvider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Internet Provider"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:drawableTop="@drawable/ic_internet"
        android:drawablePadding="8dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/btnMason"
        app:layout_constraintStart_toEndOf="@id/btnMaid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"/>
        <ImageButton
            android:id="@+id/menuBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:elevation="20dp"
            android:background="@drawable/menu_button_bg"
            android:src="@drawable/ic_menu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#2196F3"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>