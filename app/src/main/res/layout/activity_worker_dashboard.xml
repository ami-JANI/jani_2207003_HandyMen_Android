<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image">

    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Worker Dashboard"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#001F54"
                android:layout_marginBottom="24dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="7"
                android:useDefaultMargins="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"/>

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="220dp"
                    android:layout_height="48dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="220dp"
                    android:layout_height="48dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"/>

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="220dp"
                    android:layout_height="48dp"/>

                <!-- Profession -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profession"/>

                <EditText
                    android:id="@+id/etProfession"
                    android:layout_width="220dp"
                    android:layout_height="48dp"/>

                <!-- Experience -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience"/>

                <EditText
                    android:id="@+id/etExperience"
                    android:layout_width="220dp"
                    android:layout_height="48dp"/>

                <!-- Rate -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate"/>

                <EditText
                    android:id="@+id/etRate"
                    android:layout_width="220dp"
                    android:layout_height="48dp"/>

                <!-- Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"/>

                <EditText
                    android:id="@+id/etLocation"
                    android:layout_width="220dp"
                    android:layout_height="48dp"/>
            </GridLayout>

            <!-- ACTION BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:text="Change Password"/>

                <Button
                    android:id="@+id/btnSaveChanges"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:text="Save Changes"
                    android:backgroundTint="#2d9d48"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginVertical="24dp"/>

            <!-- Availability -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Availability"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <!-- Date Picker -->
            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>

            <!-- Legend -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

            </LinearLayout>

            <!-- TIME SLOTS -->
            <GridLayout
                android:id="@+id/slotGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:layout_marginTop="16dp">


                <Button android:layout_width="80dp" android:layout_height="48dp" android:text="9â€“10"/>
                <Button android:layout_width="80dp" android:layout_height="48dp" android:text="10â€“11"/>
                <Button android:layout_width="80dp" android:layout_height="48dp" android:text="11â€“12"/>
                <Button android:layout_width="80dp" android:layout_height="48dp" android:text="12â€“1"/>
                <Button android:layout_width="80dp" android:layout_height="48dp" android:text="1â€“2"/>
                <Button android:layout_width="80dp" android:layout_height="48dp" android:text="2â€“3"/>
                <Button android:layout_width="80dp" android:layout_height="48dp" android:text="3â€“4"/>
                <Button android:layout_width="80dp" android:layout_height="48dp" android:text="4â€“5"/>

            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <!-- TOP BUTTONS -->
    <Button
        android:id="@+id/btnNotification"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="ðŸ””"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="53dp"
        android:layout_height="185dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_signout_bg"
        android:text="Sign Out"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnNotification" />

</androidx.constraintlayout.widget.ConstraintLayout>
