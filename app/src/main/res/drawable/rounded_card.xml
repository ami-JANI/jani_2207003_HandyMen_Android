<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#87CEEB" /> <!-- Sky blue -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Shadow / elevation effect using stroke & padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Optional subtle border to enhance shadow look -->
    <stroke
        android:width="1dp"
        android:color="#60FFFFFF" />
</shape>
